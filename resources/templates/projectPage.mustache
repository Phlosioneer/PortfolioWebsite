<!DOCTYPE html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="/mystyles.css">
	<link rel="stylesheet" href="/splide.min.css">
	<link rel="stylesheet" href="/fontawesome/fontawesome.css">
	<link rel="stylesheet" href="/fontawesome/solid.css">
	<script src="/splide.js"></script>
	<title>{{name}} | Portfolio | Matthew Rogge</title>
</head>
<body>
	{{>navbar}}
	<div class="section">
		<div class="card">
			<div class="card-content">
				<div class="media">
					{{#image}}
					<div class="media-left has-image">
						<img src="{{{image}}}">
					</div>
					{{/image}}
					<div class="media-content">
						<h1 class="title">{{name}}</h1>
						<h2 class="subtitle">{{{brief}}}</h2>
						<div class="content">{{{desc}}}</div>
					</div>
					<!-- TODO: A nice-looking vertical dividor -->
					<div class="media-right">			
						<h3>Language:</h3><span><a>{{language}}</a><!-- TODO: Outgoing-link symbol --></span>
						<h3>Years:</h3><span>2012, 2020</span><!-- TODO: Make a config option for this -->
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="section">
		<div class="card">
			<div class="splide">
				<div class="splide__track">
					<ul class="splide__list">
						{{#screenshots}}
						<li class="columns splide__slide">
							<div class="column">
								<img src="{{{url}}}">
							</div>
							<div class="column">
								<div class="content">
									{{{desc}}}
								</div>
							</div>
						</li>
						{{/screenshots}}
					</ul>
				</div>
			</div>
		</div>
	</div>
	<script>
		new Splide('.splide').mount();
	</script>
</body>

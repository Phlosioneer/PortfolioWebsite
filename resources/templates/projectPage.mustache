<!DOCTYPE html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="/mystyles.css">
	<link rel="stylesheet" href="/splide.min.css">
	<link rel="stylesheet" href="/fontawesome/fontawesome.css">
	<link rel="stylesheet" href="/fontawesome/solid.css">
	<script src="/splide.js"></script>
	<title>{{name}} | Portfolio | Matthew Rogge</title>
</head>
<body>
	{{>navbar}}
	<div class="section">
		<div class="card">
			<div class="card-content">
				<div class="media">
					{{#image}}
					<div class="media-left has-image">
						<img src="{{{url}}}" width="{{width}}" height="{{height}}">
					</div>
					{{/image}}
					<div class="media-content">
						<h1 class="title">{{name}}</h1>
						<h2 class="subtitle">{{{brief}}}</h2>
						<div class="content">{{{desc}}}</div>
					</div>
					<!-- TODO: A nice-looking vertical dividor -->
					<div class="media-right">			
						{{#leftBar}}
						<div>
							{{#url}}
								<h3>{{name}}:</h3><span><a href="{{{url}}}">{{text}}</a></span>
							{{/url}}
							{{^url}}
								<h3>{{name}}:</h3><span>{{text}}</span>
							{{/url}}
						</div>
						{{/leftBar}}
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="section">
		<div class="card">
			<div class="splide">
				<div class="splide__track">
					<ul class="splide__list">
						{{#screenshots}}
						<li class="columns splide__slide">
							<div class="column">
								<img src="{{{url}}}" width="{{width}}" height="{{height}}">
							</div>
							<div class="column">
								<div class="content">
									{{{desc}}}
								</div>
							</div>
						</li>
						{{/screenshots}}
					</ul>
				</div>
			</div>
		</div>
	</div>
	<script>
		window.splideInstance = new Splide('.splide');
		window.splideInstance.mount();
	</script>
</body>
